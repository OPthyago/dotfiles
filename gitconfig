[alias]
	a = !git add .
	s = !git status -s
	c = !git add --all && git commit -m
	l = !git log --decorate --oneline --graph --pretty=format:'%C(blue)%h%C(red)%d %C(white)%s - %C(cyan)%cn, %C(green)%cr'
[user]
	name = OPthyago
	email = thyagoop@gmail.com
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[sequence]
	editor = nvim
[core]
	editor = nvim
